{
	"dependencies": {
		"brand-colors": "*",
		"colors-sass": "*",
		"fitvids": "*",
		"include-media": "*",
		"include-media-export": "*",
		"normalize.css": "*"
	},
	"devDependencies": {
		"autoprefixer": "*",
		"babel-core": "*",
		"babel-loader": "*",
		"babel-preset-env": "*",
		"csscomb": "*",
		"csso-cli": "*",
		"eslint": "*",
		"eslint-plugin-compat": "*",
		"eslint-plugin-vue": "*",
		"imagemin-cli": "*",
		"node-sass": "*",
		"npm-run-all": "*",
		"postcss-assets": "*",
		"postcss-cli": "*",
		"postcss-focus": "*",
		"postcss-import": "*",
		"postcss-will-change": "*",
		"rimraf": "*",
		"svg-sprite": "*",
		"uglifyjs": "*",
		"vue-loader": "*",
		"vue-template-compiler": "*",
		"watch": "*",
		"webpack": "*"
	},
	"scripts": {
		"clean": "rimraf build && mkdir build",
		"csscomb": "csscomb -c config/csscomb.json sass",
		"sass": "node-sass --precision=3 --output=build/css -r sass ",
		"postcss": "postcss -c config/postcss.config.js --replace 'build/css/*.css'",
		"csso-style": "csso build/css/style.css -o build/css/style.min.css",
		"csso-admin": "csso build/css/admin.css -o build/css/admin.min.css",
		"eslint": "eslint -c config/eslint.json --fix 'js/**/*.{js,vue}'",
		"webpack": "webpack --config=config/webpack.config.js",
		"uglify-scripts": "uglifyjs --screw-ie8 build/js/scripts.js -o build/js/scripts.min.js",
		"uglify-admin": "uglifyjs --screw-ie8 build/js/admin.js -o build/js/admin.min.js",
		"imagemin": "imagemin --out-dir=build/images 'images/**/*.{png,jpg,gif,svg}'",
		"svg_sprite": "svg-sprite --symbol --symbol-dest= --shape-id-generator=icon-%s --symbol-inline --symbol-sprite=icons.svg --shape-dim-width=100 --shape-dim-height=100 --shape-dim-precision=3 --svg-xmldecl=false --svg-doctype=false --svg-dimattrs=false --dest=build/svgs 'svgs/**/*.svg'",
		"prebuild": "npm run clean -s",
		"build:styles": "npm run csscomb -s && npm run sass -s && npm run postcss -s && run-s csso-* -s",
		"build:scripts": "npm run eslint -s && npm run webpack -s && run-s uglify-* -s",
		"build:images": "run-p imagemin svg_sprite -s",
		"build:php": "php-cs-fixer fix --config=config/php_cs.php .",
		"build": "run-p build:* -s",
		"prewatch": "npm run clean -s",
		"watch:styles": "watch 'npm run sass -s && npm run postcss -s' sass",
		"watch:scripts": "watch 'npm run webpack -s' js",
		"watch:images": "watch 'npm run imagemin -s' images",
		"watch:svgs": "watch 'npm run svg_sprite -s' svgs",
		"watch": "run-p watch:* -s"
	},
	"browserslist": [
		"last 4 Chrome versions",
		"last 2 ChromeAndroid versions",
		"last 2 Safari versions",
		"last 2 iOS versions",
		"last 4 Firefox versions",
		"Firefox ESR",
		"last 2 Edge versions",
		"IE 11"
	]
}
