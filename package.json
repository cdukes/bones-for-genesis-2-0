{
	"dependencies": {
		"brand-colors": "*",
		"colors-sass": "*",
		"fitvids": "*",
		"include-media": "*",
		"include-media-export": "*",
		"normalize.css": "*",
		"smooth-scroll": "*"
	},
	"devDependencies": {
		"@babel/core": "*",
		"@babel/preset-env": "*",
		"autoprefixer": "*",
		"babel-eslint": "*",
		"babel-loader": "*",
		"csscomb": "*",
		"csso-cli": "*",
		"eslint": "*",
		"eslint-plugin-compat": "*",
		"eslint-plugin-vue": "*",
		"imagemin-cli": "*",
		"npm-run-all": "*",
		"postcss-assets": "*",
		"postcss-cli": "*",
		"postcss-focus": "*",
		"postcss-import": "*",
		"postcss-will-change": "*",
		"rfs": "*",
		"rimraf": "*",
		"sass": "*",
		"svg-sprite": "*",
		"vue-loader": "*",
		"vue-template-compiler": "*",
		"watch": "*",
		"webpack": "*",
		"webpack-cli": "*"
	},
	"scripts": {
		"clean": "rimraf build && mkdir build",
		"csscomb": "csscomb -c config/csscomb.json sass",
		"sass": "sass --no-source-map sass/style.scss:build/css/style.css sass/admin.scss:build/css/admin.css",
		"postcss": "postcss --config=config/postcss.config.js --replace 'build/css/**/*.css'",
		"csso-style": "csso build/css/style.css -o build/css/style.min.css --no-restructure",
		"csso-admin": "csso build/css/admin.css -o build/css/admin.min.css --no-restructure",
		"eslint": "eslint -c config/eslint.json --fix '{js,config}/**/*.{js,vue}'",
		"webpack-development": "webpack --config=config/webpack.config.js --mode=development",
		"webpack-production": "webpack --config=config/webpack.config.js --mode=production",
		"imagemin": "imagemin --out-dir=build/images 'images/**/*.{png,jpg,gif,svg}'",
		"svg_sprite": "svg-sprite --symbol --symbol-dest= --shape-id-generator=icon-%s --symbol-inline --symbol-sprite=icons.svg --shape-dim-width=100 --shape-dim-height=100 --shape-dim-precision=3 --svg-xmldecl=false --svg-doctype=false --svg-dimattrs=false --dest=build/svgs 'svgs/**/*.svg'",
		"prebuild": "npm run clean -s",
		"build:styles": "npm run csscomb && npm run sass && npm run postcss && run-s csso-*",
		"build:scripts": "npm run eslint && npm run webpack-production",
		"build:images": "run-p imagemin svg_sprite",
		"build:php": "php-cs-fixer fix --config=config/php_cs.php .",
		"build": "run-p build:* -s && npm audit",
		"prewatch": "npm run clean -s",
		"watch:styles": "watch 'npm run sass && npm run postcss' sass",
		"watch:scripts": "watch 'npm run webpack-development' js",
		"watch:images": "watch 'npm run imagemin' images",
		"watch:svgs": "watch 'npm run svg_sprite' svgs",
		"watch": "run-p watch:* -s"
	},
	"browserslist": [
		"last 4 Chrome versions",
		"last 2 ChromeAndroid versions",
		"last 2 Safari versions",
		"last 2 iOS versions",
		"last 4 Firefox versions",
		"Firefox ESR",
		"last 2 Edge versions",
		"IE 11"
	]
}
